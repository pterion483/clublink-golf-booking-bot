# Claude Code Golf Booking System - Enhanced with Detailed Logging
# Environment
SHELL=/bin/bash
PATH=/usr/local/sbin:/usr/local/bin:/sbin:/bin:/usr/sbin:/usr/bin:/home/dmin1/.local/bin

# Main Booking Jobs with Enhanced Logging
25 6 * * * /home/dmin1/Golf\ Tee\ Times\ Bot/cron_wrapper.sh prestage
30 6 * * * /home/dmin1/Golf\ Tee\ Times\ Bot/cron_wrapper.sh book

# Morning Gap Finder - DAYTIME every 15 minutes (6 AM - 9 PM)
# Checks tomorrow through day 5 (aggressive for next-day bookings)
*/15 6-21 * * * /home/dmin1/Golf\ Tee\ Times\ Bot/cron_wrapper.sh gap

# Morning Gap Finder - OVERNIGHT every hour (10 PM - 5 AM)
# Checks day 2 through day 5 (more notice time, skips tomorrow)
0 22,23 * * * /home/dmin1/Golf\ Tee\ Times\ Bot/cron_wrapper.sh gap-night
0 0-5 * * * /home/dmin1/Golf\ Tee\ Times\ Bot/cron_wrapper.sh gap-night

# Maintenance
0 3 * * * find "/home/dmin1/Golf Tee Times Bot/screenshots" -type f -name "*.png" -mtime +7 -delete 2>/dev/null
0 2 * * 0 cd "/home/dmin1/Golf Tee Times Bot/logs" && gzip -9 *.log 2>/dev/null; find . -name "*.gz" -mtime +30 -delete
